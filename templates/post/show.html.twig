{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ post.image }}" alt="{{ post.title }}" class="card-img-top img-fluid" height="150" width="100%"></td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            
            <tr>
                <th>IsPublished</th>
                <td>{{ post.isPublished ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href={{ path('app_post_index') }}>{{ ux_icon('mdi:arrow-back', { 'class': 'h-1 w-1' }) }}Back to posts</a>
    {% if app.user == post.user %} 
        <a href={{ path('app_post_edit', {'ref': post.ref}) }}>{{ ux_icon('mdi:pencil', { 'class': 'h-1 w-1' }) }}Edit</a>
        {{ include('post/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
