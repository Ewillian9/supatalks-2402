<form method="post" action="{{ path('app_post_delete', {'ref': post.ref}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.ref) }}">
    <button class="btn">{{ ux_icon('mdi:trash-can', { 'class': 'h-1 w-1' }) }}Delete</button>
</form>
